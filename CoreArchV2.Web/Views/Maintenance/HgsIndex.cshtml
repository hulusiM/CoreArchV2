<script>
    var historyButtonsActive = false;
    var isHgsPage = true;
    function MainModalOpen() {
        $('#MaintenanceInsert_toggle').click();
        historyButtonsActive = false;
        FormAllInputsClearNoCloseModal("#Maintenance_FormId [table-param]");
        setImage(null);
        funcCustomComboBoxSingle("select-plate2", "", "");
        funcCustomComboBoxSingle("select-userId2", "", "");
        $('.select-search').val('').select2();
        $('#EditInsertModal').modal("show");
    }

    //------------------------------------- Static Area Start ---------------------------------------//
    function funcFilterTable(incomingUrl) {
        firstLoadModal = true;
        if (incomingUrl == undefined || incomingUrl == null || incomingUrl == "")
            incomingUrl = "/Maintenance/MaintenanceGetAll?isHgs=true";

        var model = FormGetAllValue("#FormSearchTable [table-param]");
        dtSayac = 0;
        sendAjxForm(model, incomingUrl, funcDataTable, "POST");

        IsSearchOpen = false;
        $('#FormSearchTable').hide();
    }

    function funcClearFilterTable() {
        FormAllInputsClear('#FormSearchTable [table-param]');
        funcFilterTable();
        ShowMessage("success", "Bilgi", "Tüm parametreler temizlendi.");
    }
    //------------------------------------- Static Area End ---------------------------------------//
</script>