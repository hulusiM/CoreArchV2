<script type="text/javascript">
    $('#UserId').select2({
        placeholder: 'Adı,Soyadı veya Telefon Numarası',
        minimumInputLength: 3,
        ajax: {
            url: '/Combo/GetUserCmbx',
            dataType: 'json',
            delay: 250,
            processResults: function (data) {
                return {
                    results: data
                };
            },
            cache: true
        }
    });
    $('#UserId2').select2({
        placeholder: 'Adı,Soyadı veya Telefon Numarası',
        minimumInputLength: 3,
        ajax: {
            url: '/Combo/GetUserCmbx',
            dataType: 'json',
            delay: 250,
            processResults: function (data) {
                return {
                    results: data
                };
            },
            cache: true
        }
    });
</script>

<script>
    function funcSaveNewRole() {
        var userId = parseInt($('#UserId2').val());
        var roleId = parseInt($('#UserRoleId2').val());
        var homePageId = parseInt($('#HomePageId').val());
        if (Number.isInteger(userId) && Number.isInteger(roleId) && Number.isInteger(homePageId)) {
            var model = {
                UserId: userId,
                RoleId: roleId,
                HomePageId: homePageId
            };
            sendAjxForm(model, "/UserRole/Insert", function (e) {
                if (e.IsSuccess)
                    $('#EditInsertModal').modal('hide');

                ShowMessage("info", "Bilgi", e.Message, 20000);
            }, 'POST');
        } else
            ShowMessage("info", "Bilgi", "Rol ve Kullanıcı adı boş geçilemez");
    }

    function funcOpenRoleUserModal() {
        $('#UserId2').val('').change();
        $('#UserRoleId2').val('').change();
        $('#HomePageId option:not(:first)').remove();
        $('#EditInsertModal').modal('show');
    }

    function funcRoleChange() {
        var roleId = $('#UserRoleId2').val();
        if (roleId != "") {
            sendAjxForm({ roleId: roleId }, "/UserRole/GetRoleWithHomePageList",
                function (e) {
                    funcCustomComboBox(e, "HomePageId", "Anasayfa Seçiniz");
                }, 'POST');
        } else
            $('#HomePageId option:not(:first)').remove();

    }

    //------------------------------------- Static Area Start ---------------------------------------//

    function funcFilterTable(incomingUrl) {
        firstLoadModal = true;
        if (incomingUrl == undefined || incomingUrl == "")
            incomingUrl = "/UserRole/UserRoleGetAll";

        var model = FormGetAllValue("#FormSearchTable [table-param]");

        dtSayac = 0;
        sendAjxForm(model, incomingUrl, funcDataTable, "POST");

        IsSearchOpen = false;
        $('#FormSearchTable').hide();
    }

    function funcClearFilterTable(e) {
        FormAllInputsClear('#FormSearchTable [table-param]');
        funcFilterTable();
        ShowMessage("success", "Bilgi", "Tüm parametreler temizlendi.");
    }
    //------------------------------------- Static Area End ---------------------------------------//
</script>