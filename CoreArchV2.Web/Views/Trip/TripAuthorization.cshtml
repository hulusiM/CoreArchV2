<script type="text/javascript">
    $('#select-Plate_Filter').select2({
        placeholder: 'Plaka Giriniz',
        minimumInputLength: 3,
        language: "tr",
        ajax: {
            url: '/Combo/GetVehicleCmbx',
            dataType: 'json',
            delay: 250,
            processResults: function (data) {
                return {
                    results: data
                };
            },
            cache: true
        }
    });
    $('#select-vehicleId').select2({
        placeholder: 'Plaka Giriniz',
        minimumInputLength: 3,
        language: "tr",
        ajax: {
            url: '/Combo/GetVehicleCmbx?isActive=true',
            dataType: 'json',
            delay: 250,
            processResults: function (data) {
                return {
                    results: data
                };
            },
            cache: true
        }
    });
    $('#select-userId-filter').select2({
        placeholder: 'Adı,Soyadı veya Telefon Numarası',
        minimumInputLength: 3,
        language: "tr",
        ajax: {
            url: '/Combo/GetUserCmbx',
            dataType: 'json',
            delay: 250,
            processResults: function (data) {
                return {
                    results: data
                };
            },
            cache: true
        }
    });
</script>

<script>
    function funcAllowedTrip(tripId) {
        $('#Trip_FormId').css({
            "border-left": "6px solid #ccc!important",
            "padding": "12px",
            "background-color": "#ddffff!important",
            "border-top-right-radius": "5px",
            "border-bottom-right-radius":"5px",
            "cursor": "not-allowed"
        });
        $('.alertMessageDiv').css("display", "none");
        $('.infoTrip [table-param]').prop("disabled", true);
        $('#TripInsert_toggle').click();
        sendAjxForm({ id: tripId }, '/Trip/GetById',
            function (e) {
                if (e.Id > 0) {
                    var formId = '#Trip_FormId [table-param]';
                    var model = {
                        selector: formId,
                        data: e
                    };
                    FormSetAllValue(model);
                    setVehicle(e.VehicleId, "select-vehicleId");
                    $('#TripAllowedModal').modal("show");
                    funcFilterTable();
                }
            }, 'GET');
    }

    function funcSaveAllowedTrip(isAllowed) {
        var model = {
            IsManagerAllowed: isAllowed,
            Description:$('#tripSuccessCancelDesc').val(),
            Id: $('#tripId').val()
        };
        sendAjxForm(model, '/Trip/ChangeAllowedStatus',
            function (e) {
                if (e.IsSuccess) {
                    funcFilterTable();
                    ShowMessage("success", "Bilgi", "İşlem Başarılı.");
                    $('#TripAllowedModal').modal("hide");
                }
                else
                    ShowMessage("error", "Bilgi", e.Message);
            }, 'GET');
    }

    $(document).ready(function() {
       var tripId = @ViewBag.TripIdForExternalData;
       if (tripId > 0) {
           funcAllowedTrip(tripId);
           sendAjxForm({Id:tripId}, "/Trip/TripAuthGetAll?IsFilterMode=true", funcDataTable, "POST");
       }
    });
    //------------------------------------- Static Area Start ---------------------------------------//
    function funcFilterTable(incomingUrl) {
        firstLoadModal = true;
        if (incomingUrl == undefined || incomingUrl == null || incomingUrl == "")
            incomingUrl = "/Trip/TripAuthGetAll?IsFilterMode=true";

        var model = FormGetAllValue("#FormSearchTable [table-param]");

        dtSayac = 0;
        sendAjxForm(model, incomingUrl, funcDataTable, "POST");

        IsSearchOpen = false;
        $('#FormSearchTable').hide();
    }

    function funcClearFilterTable() {
        FormAllInputsClear('#FormSearchTable [table-param]');
        funcFilterTable();
        ShowMessage("success", "Bilgi", "Tüm parametreler temizlendi.");
    }
    //------------------------------------- Static Area End ---------------------------------------//
</script>
