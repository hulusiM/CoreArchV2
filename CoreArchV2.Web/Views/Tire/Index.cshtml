@using CoreArchV2.Core.Enum
<script>$('#broadCrumbDiv').text('Bakım/Onarım Yönetimi / Lastik Tanımları')</script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-line breadcrumb-line-component content-group-lg bg-teal-400" style="margin: 3px -11px 0 -23px;">
    <ul class="breadcrumb">
        <li>Araç Lastik Tanımları</li>
    </ul>

    <ul class="breadcrumb-elements">
        <li>
            <a onclick="TireChartOpenModal()"><i class="icon-pie-chart2 position-left"></i> Depo/Lastik Bilgileri</a>
        </li>

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-gear position-left"></i>
                İşlemler
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
                <li>
                    <a onclick="TireOpenModal()"><i class="icon-make-group position-left"></i> Depoya Lastik Ekle/Sil</a>
                </li>
                <li>
                    <a onclick="TireDebitOpenModal()"><i class="icon-wrench2 position-left"></i> Lastik Değişimi</a>
                </li>
                <li>
                    <a onclick="TireDebitReturnOpenModal()"><i class="icon-reset position-left"></i> Lastik İade</a>
                </li>
                <li>
                    <a onclick="TireInertOpenModal()"><i class="icon-trash position-left"></i> Atıl İşlemi</a>
                </li>
            </ul>
        </li>
        <li class="dropdown">
            <a href="#" id="btnSearch" class="dropdown-toggle" data-toggle="dropdown" onclick="funcSearchForm()">
                <i class="icon-gear position-left"></i>
                Filtreleme Seçenekleri
                <span class="caret"></span>
            </a>
            <ul id="FormSearchTable" class="dropdown-menu dropdown-menu-right">
                <li>
                    <div class="col-md-12" style="margin-top: 8px;">
                        <select id="select-Plate_Filter"
                                tabindex="2"
                                table-param="VehicleId"
                                class="select2-container select2-selection--single">
                        </select>
                    </div>
                </li>
                <li>
                    <div class="col-md-12" style="margin-top: 8px;">
                        <select id="DimensionTypeId_Filter"
                                class="select-search"
                                table-param="DimensionTypeId"
                                table-id="comboBox-DimensionTypeId"
                                table-model-url="/Combo/GetByLookUpListTypeId?typeId=@((int) TypeList.DimensionTypeId)"
                                table-tool-type="comboBox"
                                data-option-label="Lastik Ebat Seçiniz">
                        </select>
                    </div>
                </li>
                <li>
                    <div class="col-md-12" style="margin-top: 8px;">
                        <select id="TireTypeId_Filter"
                                class="select-search"
                                table-param="TireTypeId"
                                table-id="comboBox-TireTypeId"
                                table-model-url="/Combo/GetByLookUpListTypeId?typeId=@((int) TypeList.TireTypeId)"
                                table-tool-type="comboBox"
                                data-option-label="Lastik Kullanım Tipi Seçiniz">
                        </select>
                    </div>
                </li>
                <li>
                    <div class="col-md-12" style="margin-top: 8px;">
                        <button type="button" style="width: 100%;" class="btn bg-danger-800 btn-xs" onclick="funcClearFilterTable('FormSearchTable')"><i class="icon-trash"></i> Temizle</button>
                    </div>
                </li>
                <li>
                    <div class="col-md-12" style="margin: 8px 0 8px 0;">
                        <button type="button" style="float: left; width: 100%;" class="btn bg-teal-300 btn-xs" onclick="funcFilterTable()"><i class="icon-search4"></i> Filtrele</button>
                    </div>
                </li>
            </ul>
        </li>
    </ul>
</div>

<div class="content has-bg-image small" style="margin: -25px -10px 0px -23px;">
    <div class="panel panel-flat has-bg-image">
        <div class="panel-body ">
            <div class="row">
                <div class="table-responsive genericDatatables">
                    <table class="table-striped table-hover table-bordered table datatable-basic table-loader"
                           id="dataTableTire"
                           table-id="dataTable-Tire"
                           table-model-url="/Tire/TireGetAll"
                           table-DatabaseName="/Tire"
                           table-tool-type="dataTable">
                        <thead>
                            <tr class="filters">
                                <th data-value="Id" hidden="hidden"></th>
                                <th style="text-align: center; width: 1%;">No</th>
                                <th data-value="Plate" style="text-align: center;">
                                    Plaka
                                </th>
                                <th data-value="TireTypeName" style="text-align: center;">
                                    Kullanım Tipi
                                </th>
                                <th data-value="DimensionTypeName" style="text-align: center;">
                                    Ebat
                                </th>
                                <th data-value="TireCount" style="text-align: center;">
                                    Takılan Lastik (Adet)
                                </th>
                                <th data-value="ButtonEditDelete" style="text-align: center;">
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tBody"></tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="table-footer">
                    <div class="col-md-12" id="TableFooter">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/PartialViews/Tire/_TireModals.cshtml")
